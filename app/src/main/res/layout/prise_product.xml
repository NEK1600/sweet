<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relOne"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriseProductActivity">
    <ImageView
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image1"
        />
    <ImageView
        android:id="@+id/id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image2"
        android:layout_below="@+id/id1"
        />


    <View
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/id2"
        android:layout_toStartOf="@+id/editGram"
        android:background="#124472" />
    <View
        android:id="@+id/editGram"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_below="@+id/id2"
        android:layout_alignParentEnd="true"
        android:background="#124472"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/editGram"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="50dp"
        android:layout_height="300dp"
        android:layout_below="@+id/editGram"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/spinner"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>





        <ImageButton
            android:id="@+id/addSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/image5"
            android:layout_alignParentBottom = "true"
            android:onClick="onButtonAddSpinner"
            />

        <ImageButton
            android:id="@+id/id3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_above="@id/textViewResult"
            android:layout_toLeftOf="@+id/addSpinner"
            android:layout_marginRight="30dp"
            android:background="@drawable/image6"
            android:onClick="onButtonPriseTwo" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/addSpinner"
        android:background="#A3BED8"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginEnd="30dp"
        android:textSize="30sp" />


</RelativeLayout>

